<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/idTVSecondary"
        android:background="@color/black_shade_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:textAlignment="viewEnd"
        android:text=""
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="RtlCompat"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:id="@+id/idTVPrimary"
            android:layout_below="@id/idTVSecondary"
            android:background="@color/black_shade_3"
            android:gravity="bottom"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="50sp"
            tools:ignore="RtlCompat" />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/idTVPrimary"
            android:background="@color/black_shade_1"
            app:cardBackgroundColor="@color/black_shade_1"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="7"
                android:background="@color/black_shade_1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnAC"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="AC"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnC"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="C"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnbrac1"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="("
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnbrac2"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text=")"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnsin"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:text="sin"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtncos"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="cos"
                        android:textAllCaps="false"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtntan"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="tan"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnlog"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="log"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnln"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="ln"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnFact"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:text="x!"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnSquare"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="x^2"
                        android:textAllCaps="false"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnSqRoot"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="√"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnInv"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="1/x"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnDiv"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="/"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtn7"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:text="7"
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtn8"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="8"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtn9"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnMul"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="×"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtn4"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtn5"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="5"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtn6"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnSub"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="-"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtn1"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtn2"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="2"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtn3"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnAdd"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="+"
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnpi"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:text="π"
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtn0"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="0"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnDot"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="."
                        android:textColor="@color/white"
                        android:textSize="15sp">
                    </Button>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/idBtnEqual"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black_shade_2"
                        android:padding="6dp"
                        android:text="="
                        android:textColor="@color/yellow"
                        android:textSize="15sp">
                    </Button>

                </LinearLayout>

            </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>